<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- App-Titel -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GymTrack"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/titleBlue"
            android:layout_marginBottom="90dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/button_chest"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="Brusttraining"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonGreen"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_back"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="RÃ¼ckentraining"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonGreen"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/button_arms"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="Armtraining"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonGreen"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/button_shoulders"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="Schultertraining"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonGreen"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/button_legs"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="Beintraining"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonGreen"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
